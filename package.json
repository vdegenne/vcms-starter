{
  "name": "testapp",
  "version": "0.1.0",
  "description": "%description%",
  "author": "%author%",
  "license": "BSD-3-Clause",
  "scripts": {
    "run:dev": "NODE_ENV=dev node build/%appname%",
    "install:database": "psql -U postgres -a -f sql/install.sql",
    "uninstall:database": "psql -U postgres -a -f sql/uninstall.sql",
    "clean": "rimraf build",
    "build": "yarn clean && tsc",
    "test": "NODE_ENV=test mocha",
    "test:watch": "yarn clean && tsc-then -- NODE_ENV=test mocha",
    "format": "find src test -iname '*.ts' | xargs clang-format --style=file -i",
    "attach-polymer": "bash ./scripts/attach-polymer.sh"
  },
  "dependencies": {
    "vcms": "^0.2.3"
  }
}
